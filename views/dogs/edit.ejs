<% layout('layouts/boilerplate')%>

<h1>Edit a doggie</h1>

<form action="/dogs/<%= dog._id %>?_method=PUT" method="POST">
  <div>
    <label for="title">Name:</label>
    <input type="text" id="title" name="dog[name]" value="<%= dog.name %>" />
  </div>
  <div>
    <label for="age">Age:</label>
    <input type="number" id="age" name="dog[age]" value="<%= dog.age %>" />
  </div>
  <div>
    <label for="breed">Breed:</label>
    <input type="text" id="breed" name="dog[breed]" value="<%= dog.breed %>" />
  </div>
  <div>
    <label for="description">Description:</label>
    <input
      type="text"
      id="description"
      name="dog[description]"
      value="<%= dog.description %>"
    />
  </div>

  <button>Submit</button>
</form>
