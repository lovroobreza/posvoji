<% layout('layouts/boilerplate')%>

<div class="row">
  <div class="col-6">
    <h1 class="text-center mb-5">Uredi še kaj</h1>
    <form
    action="/dogs/<%= dog._id %>?_method=PUT"
    method="POST"
    novalidate
    class="validated-form"
    enctype="multipart/form-data"
  >
    <div class="row mb-3">
      <% dog.images.forEach((img,i) => { %>
      <div class="col-6">
        <img src="<%= img.url%>" alt="" class="img-thumbnail" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%=i%>"
            name="deleteImages[]"
            value="<%=img.filename%>"
          />
        </div>
        <label for="image-<%=i%>">Zbriši sliko</label>
      </div>
      <% }); %>
    </div>
  </div>
  <div class="col-6">
   
      <div class="mb-2">
        <label class="form-label" for="title">Ime:</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="dog[name]"
          required
          value="<%= dog.name %>"
        />
        <div class="valid-feedback">Vredu bo!</div>
      </div>
      <div class="mb-2">
        <label class="form-label" for="age">Starost:</label>
        <input
          min="1"
          class="form-control"
          type="number"
          id="age"
          name="dog[age]"
          required
          value="<%= dog.age %>"
        />
        <div class="valid-feedback">Vredu bo!</div>
      </div>
      <div class="mb-2">
        <label class="form-label" for="breed">Pasma:</label>
        <input
          class="form-control"
          type="text"
          id="breed"
          name="dog[breed]"
          required
          value="<%= dog.breed %>"
        />
        <div class="valid-feedback">Vredu bo!</div>
      </div>
      <div class="mb-5">
        <label class="form-label" for="description">Kratek opis:</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="dog[description]"
          value="<%= dog.description %>"
          required
        >
        <%= dog.description %></textarea
        >
        <div class="valid-feedback">Vredu bo!</div>
      </div>

      <p>Dodajte novo sliko:</p>
      <input type="file" name="dog[image]" multiple />

      <div class="mt-3 d-flex justify-content-center">
        <button class="btn btn-success p-3">Posodobi oglas</button>
      </div>
    </form>
  </div>
</div>
