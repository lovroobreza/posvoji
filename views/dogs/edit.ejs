<% layout('layouts/boilerplate')%>

<div class="row">
  <h1 class="text-center">Edit your doggies details!</h1>
  <div class="col-6 offset-3">
    <form
      action="/dogs/<%= dog._id %>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-2">
        <label class="form-label" for="title">Name:</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="dog[name]"
          required
          value="<%= dog.name %>"
        />
        <div class="valid-feedback">That's fine!</div>
      </div>
      <div class="mb-2">
        <label class="form-label" for="age">Age:</label>
        <input
          min="1"
          class="form-control"
          type="number"
          id="age"
          name="dog[age]"
          required
          value="<%= dog.age %>"
        />
        <div class="valid-feedback">That's fine!</div>
      </div>
      <div class="mb-2">
        <label class="form-label" for="breed">Breed:</label>
        <input
          class="form-control"
          type="text"
          id="breed"
          name="dog[breed]"
          required
          value="<%= dog.breed %>"
        />
        <div class="valid-feedback">That's fine!</div>
      </div>
      <div class="mb-5">
        <label class="form-label" for="description">Description:</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="dog[description]"
          value="<%= dog.description %>"
          required
        >
        <%= dog.description %></textarea
        >
        <div class="valid-feedback">That's fine!</div>
      </div>

      <p>Chose a few more images:</p>
      <input type="file" name="dog[image]" multiple />

      <div class="mb-3">
        <% dog.images.forEach((img,i) => { %>
        <img src="<%= img.url%>" alt="" class="img-thumbnail" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%=i%>"
            name="deleteImages[]"
            value="<%=img.filename%>"
          />
        </div>
        <label for="image-<%=i%>">Delete</label>
        <% }); %>
      </div>

      <div class="mt-3 d-flex justify-content-center">
        <button class="btn btn-success p-3">Update</button>
      </div>
    </form>
  </div>
</div>
