<% layout('layouts/boilerplate')%>

<div class="container">
  <h1 class="h1 text-center mb-5">All the puppies in need of help</h1>

  <div class="row">
    <% for(let dog of dogs){ %>

    <div class="card mb-5 col-sm-12 col-md-6 col-lg-4 col-xxl-3">
      <img
        src="https://media.istockphoto.com/photos/english-bulldog-in-a-pumpkin-wagon-picture-id1280623255?s=612x612"
        class="card-img-top w-100"
        alt="dog"
      />
      <div class="card-body">
        <h5 class="card-title"><%= dog.name %></h5>
        <p class="card-text"><%= dog.breed %></p>
        <a href="/dogs/<%= dog._id %>" class="btn btn-primary">Check him out</a>
      </div>
    </div>
    <% } %>
  </div>
</div>
