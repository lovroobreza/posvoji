<% layout('layouts/boilerplate')%>

<form action="/dogs" method="POST">
  <div>
    <label for="title">Name:</label>
    <input type="text" id="title" name="dog[name]" />
  </div>
  <div>
    <label for="age">Age:</label>
    <input type="number" id="age" name="dog[age]" />
  </div>
  <div>
    <label for="breed">Breed:</label>
    <input type="text" id="breed" name="dog[breed]" />
  </div>
  <div>
    <label for="description">Description:</label>
    <input type="text" id="description" name="dog[description]" />
  </div>

  <button>Submit</button>
</form>
