<% layout('layouts/boilerplate')%>

<div class="row">
  <div class="col-6">
    <h1 class="text-center">Oddaj kužka v nov dom</h1>

    <form
      action="/dogs"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-2">
        <label class="form-label" for="title">Ime:</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="dog[name]"
          required
        />
        <div class="valid-feedback">Vredu bo!</div>
      </div>
      <div class="mb-2">
        <label class="form-label" for="age">Starost:</label>
        <input
          class="form-control"
          type="number"
          id="age"
          name="dog[age]"
          required
        />
        <div class="valid-feedback">Vredu bo!</div>
      </div>
      <div class="mb-2">
        <label class="form-label" for="breed">Pasma:</label>
        <input
          class="form-control"
          type="text"
          id="breed"
          name="dog[breed]"
          required
        />
        <div class="valid-feedback">Vredu bo!</div>
      </div>
      <div class="mb-2">
        <label class="form-label" for="description">Kratek opis:</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="dog[description]"
          placeholder="Kako se razume kuža z ljudmi, kako z ostalimi živalmi. Kaj najraje je, s čem se rad igra."
          required
        ></textarea>
        <div class="valid-feedback">Vredu bo!</div>
      </div>

      <p>Dodajte še sliko</p>
      <input required type="file" name="dog[image]" name="image" multiple />

      <div class="mt-3 d-flex justify-content-center">
        <button class="btn btn-success p-3">Oddaj</button>
      </div>
    </form>
  </div>
  <div class="col-6">
    <h1 class="mb-3 text-center" style="color: orange">
      Osrečite kužka in mu priskrbite dom, ki si ga zasluži
    </h1>
    <div style="display: flex; align-items: center; justify-content: center">
      <img
        style="height: 70%; width: 60%"
        src="https://images.unsplash.com/photo-1518020382113-a7e8fc38eac9?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=717&q=80"
        alt="Slika žalostnega kužka"
      />
    </div>
  </div>
</div>
