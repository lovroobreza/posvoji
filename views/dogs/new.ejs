<% layout('layouts/boilerplate')%>

<div class="row">
  <h1 class="text-center">Put a puppy up for adoption</h1>
  <div class="col-6 offset-3">
    <form action="/dogs" method="POST" novalidate class="validated-form">
      <div class="mb-2">
        <label class="form-label" for="title">Name:</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="dog[name]"
          required
        />
        <div class="valid-feedback">That's fine!</div>
      </div>
      <div class="mb-2">
        <label class="form-label" for="age">Age:</label>
        <input
          class="form-control"
          type="number"
          id="age"
          name="dog[age]"
          required
        />
        <div class="valid-feedback">That's fine!</div>
      </div>
      <div class="mb-2">
        <label class="form-label" for="breed">Breed:</label>
        <input
          class="form-control"
          type="text"
          id="breed"
          name="dog[breed]"
          required
        />
        <div class="valid-feedback">That's fine!</div>
      </div>
      <div class="mb-2">
        <label class="form-label" for="description">Description:</label>
        <input
          class="form-control"
          type="text"
          id="description"
          name="dog[description]"
          required
        />
        <div class="valid-feedback">That's fine!</div>
      </div>

      <div class="mt-3 d-flex justify-content-center">
        <button class="btn btn-success p-3">Submit</button>
      </div>
    </form>
  </div>
</div>
