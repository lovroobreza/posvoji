<% layout('layouts/boilerplate')%>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="mb-3">Registriracija</h1>
      <form action="/register" method="POST" novalidate class="validated-form">
        <div class="mb-2">
          <label class="form-label" for="username">Uporabni≈°ko ime:</label>
          <input
            class="form-control"
            type="text"
            id="username"
            name="username"
            required
          />
          <div class="valid-feedback">Vredu bo!</div>
        </div>
        <div class="mb-2">
          <label class="form-label" for="email">E-mail:</label>
          <input
            class="form-control"
            type="email"
            id="email"
            name="email"
            required
          />
          <div class="valid-feedback">Vredu bo!</div>
        </div>
        <div class="mb-2">
          <label class="form-label" for="password">Geslo:</label>
          <input
            class="form-control"
            type="password"
            id="password"
            name="password"
            required
          />
          <div class="valid-feedback">Vredu bo!</div>
        </div>
        <button class="mt-3 btn btn-success">Registriraj se</button>
      </form>
    </div>
  </div>
</div>
